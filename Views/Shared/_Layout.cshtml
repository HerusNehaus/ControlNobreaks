@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Control Nobreak</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Link para o seu CSS personalizado -->
</head>

<style>
   /* Modo claro (padrão) */
body.light {
    background-color: #f8f9fa;
    color: #212529;
}

.navbar.light {
    background-color: #f8f9fa;
    color: #212529;
}

/* Modo escuro */
body.dark {
    background-color: #121212;
    color: #ffffff; /* Garante que o texto seja branco */
}

.navbar.dark {
    background-color: #343a40; /* Navbar escura */
    color: #ffffff;
}

body.dark .btn {
    color: #ffffff; /* Cor do texto nos botões */
}

body.dark .btn-secondary {
    background-color: #6c757d;
    color: #ffffff;
}

body.dark a {
    color: #ffffff; /* Links em branco */
}

body.dark a:hover {
    color: #ddd; /* Links em cor mais clara ao passar o mouse */
}

body.dark .table {
    background-color: #1e1e1e;
    color: #ffffff; /* Garante que o texto da tabela também seja branco */
}

body.dark .footer {
    background-color: #1e1e1e;
    color: #ffffff;
}

body.dark .container {
    background-color: #1e1e1e;
    color: #ffffff; /* Fundo e texto em branco para a área principal */
}
/* Ajuste para o footer no modo escuro */
body.dark footer {
    background-color: #1e1e1e; /* Fundo do footer no modo escuro */
    color: #ffffff;            /* Texto branco no footer */
}

body.dark footer a {
    color: #ffffff;            /* Links no footer também brancos */
}

body.dark footer a:hover {
    color: #ddd;               /* Cor mais clara ao passar o mouse */
}</style>
<body class="@ViewBag.Theme">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index", "Nobreaks")">Control Nobreak</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Nobreaks")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Nobreaks")">Cadastrar Nobreak</a>
                    </li>
                </ul>
                <button id="themeToggle" class="btn btn-secondary ml-auto">Alterar Tema</button> <!-- Botão para alternar tema -->
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody() <!-- Onde o conteúdo da página será renderizado -->
    </div>

   <footer class="text-center text-lg-start mt-4">
    <div class="text-center p-3">
        <span>&copy; @DateTime.Now.Year Control Nobreak - Todos os direitos reservados.</span>
        <a class="btn btn-link" href="@Url.Action("Privacy", "Home")">Política de Privacidade</a>
    </div>
</footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.0.11/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Verifica o tema armazenado no localStorage e aplica ao body
        const currentTheme = localStorage.getItem('theme') || 'light';
        document.body.classList.add(currentTheme);

        // Alterna entre os temas claro e escuro e salva no localStorage
        document.getElementById('themeToggle').addEventListener('click', function () {
            document.body.classList.toggle('dark');
            const newTheme = document.body.classList.contains('dark') ? 'dark' : 'light';
            localStorage.setItem('theme', newTheme);
        });
    </script>
</body>
</html>
